modules = ["nodejs-20", "python-3.11", "flutter", "dart"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HTML Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter App"

[[workflows.workflow]]
name = "HTML Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Flutter App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run --web-port=5000 --web-hostname=0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
